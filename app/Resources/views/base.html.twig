<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {%include 'AcmeOrganisationBundle:Templates:css.html.twig'%}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

    </head>
    <body>
        {%include 'AcmeOrganisationBundle:Templates:js.html.twig'%}
            <!-- Header and Nav -->
        {%include 'AcmeOrganisationBundle:Templates:top-bar.html.twig'%}
            <!-- End Header and Nav -->
            <div class="row">
                <!-- Main Content Section -->
                <!-- This has been source ordered to come first in the markup (and on small devices) but to be to the right of the nav on larger screens -->
                <div class="large-9 push-3 columns">
                    {% block body %}{% endblock %}
                </div>
                    <!-- Nav Sidebar -->
                    <!-- This is source ordered to be pulled to the left on larger screens -->
                    {%include 'AcmeOrganisationBundle:Templates:side-bar.html.twig'%}
            </div>
                <!-- Footer -->
            <footer class="row">
                <div class="large-12 columns">
                    <hr />
                 {%include 'AcmeOrganisationBundle:Templates:bottom-bar.html.twig'%}   
                </div>
            </footer>

            <!-- Check for Zepto support, load jQuery if necessary -->
            <script>
                document.write('<script src=/bundles/acmeorganisation/css/foundation-4.3.1/js/vendor/'
                        + ('__proto__' in {} ? 'zepto' : 'jquery')
                        + '.js><\/script>');
            </script>
{%block javascript%}
            <script src="{{ asset('bundles/acmeorganisation/css/foundation-4.3.1/js/foundation.min.js') }}"></script>
{%endblock%}
            <script>
                $(document).foundation();
            </script>

    </body>
</html>
